<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Font"
    tools:context="com.hugopinto.subneteoip.MainActivity">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_margin="20dp"
     android:layout_height="wrap_content">

     <EditText
         android:layout_weight="1"
         android:id="@+id/et1"
         android:layout_width="60dp"
         android:maxLength="3"
         android:inputType="number"
         android:maxLines="1"
         android:hint="000"
         android:textAlignment="center"
         android:layout_height="wrap_content"
         android:textSize="25sp"
         />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="."
         android:textSize="50sp"/>
     <EditText
         android:layout_weight="1"
         android:id="@+id/et2"
         android:layout_width="60dp"
         android:maxLength="3"
         android:inputType="number"
         android:maxLines="1"
         android:hint="000"
         android:textAlignment="center"
         android:layout_height="wrap_content"
         android:textSize="25sp"
         />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="."
         android:textSize="50sp"/>
     <EditText
         android:layout_weight="1"
         android:id="@+id/et3"
         android:layout_width="60dp"
         android:maxLength="3"
         android:inputType="number"
         android:maxLines="1"
         android:hint="000"
         android:textAlignment="center"
         android:layout_height="wrap_content"
         android:textSize="25sp"
         />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="."
         android:textSize="50sp"/>
     <EditText
         android:layout_weight="1"
         android:id="@+id/et4"
         android:layout_width="60dp"
         android:maxLength="3"
         android:inputType="number"
         android:maxLines="1"
         android:hint="000"
         android:textAlignment="center"
         android:layout_height="wrap_content"
         android:textSize="25sp"
         />
     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="/"
         android:textSize="30sp"/>
     <EditText
         android:layout_weight="1"
         android:id="@+id/et5"
         android:layout_width="60dp"
         android:maxLength="2"
         android:inputType="number"
         android:maxLines="1"
         android:hint="00"
         android:textAlignment="center"
         android:layout_height="wrap_content"
         android:textSize="20sp"
         />


 </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <Button
            android:id="@+id/btn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Procesar"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="@string/app_name"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Net ID:"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Broadcast ID:"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad de IP:"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/cantip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Cant IP"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="@color/Letter"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/netid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Net ID:"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="@color/Letter"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/broadcast"
            android:layout_marginTop="45dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Broadcast ID:"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="@color/Letter"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_marginTop="38dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parte de Red:"
            android:layout_gravity="center_horizontal"
            android:textSize="25sp"
            android:textColor="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/partered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Parte de Red"
            android:layout_gravity="center_horizontal"
            android:textSize="15sp"
            android:textColor="@color/Letter"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#000000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>


    </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parte de Host:"
        android:layout_gravity="center_horizontal"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryDark"/>



    <TextView
        android:id="@+id/partehost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Parte de Host"
        android:layout_gravity="center_horizontal"
        android:textSize="15sp"
        android:textColor="@color/Letter"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:background="#000000"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</LinearLayout>
